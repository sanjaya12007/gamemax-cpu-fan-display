<Window x:Class="GameMax_CPU_Fan_Display.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Width="400" Height="200"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="#DC1a1a1a"
        Foreground="White"
        MouseDown="Window_MouseDown">
    <Grid Margin="15">
        <TextBlock Text="Application Settings"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   FontSize="18"
                   FontWeight="Bold"
                   Margin="0,0,0,15"/>
        <Button x:Name="BtnClose"
                Content="✕"
                Width="32" Height="32"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Cursor="Hand">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"
                                      RecognizesAccessKey="True"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="False">
                            <Setter Property="Foreground" Value="#CCCCCC"/>
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Foreground" Value="White"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Button.Template>
            <Button.FontSize>16</Button.FontSize>
            <Button.Background>Transparent</Button.Background>
            <Button.BorderThickness>0</Button.BorderThickness>
        </Button>
        <StackPanel Margin="0,50,0,0">
            <TextBlock Text="Update interval (ms)"
                       FontSize="14"
                       Margin="0,0,0,5"/>
            <Slider x:Name="SliderInterval"
                    Foreground="White"
                    Minimum="100" Maximum="2000"
                    TickFrequency="100"
                    IsSnapToTickEnabled="True"
                    Value="1000"
                    Height="30"/>
            <TextBlock x:Name="TextInterval"
                       Text="1000 ms"
                       HorizontalAlignment="Right"
                       FontSize="13"
                       Foreground="#bbb"
                       Margin="0,5,0,15"/>
            <CheckBox x:Name="CheckAutostart"
                      Foreground="White"
                      Content="Start with Windows"
                      FontSize="14"/>
        </StackPanel>
    </Grid>
</Window>
